# ===========================================
# Zoom YouTube Automation - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# Zoom Configuration
# -------------------------------------------
ZOOM_ACCOUNT_ID=your_account_id
ZOOM_CLIENT_ID=your_client_id
ZOOM_CLIENT_SECRET=your_client_secret
ZOOM_WEBHOOK_SECRET_TOKEN=your_webhook_secret_token

# -------------------------------------------
# OpenAI Configuration (Whisper & GPT)
# -------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key

# Model settings
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_GPT_MODEL=gpt-4-turbo-preview

# -------------------------------------------
# Google Configuration
# -------------------------------------------
# Path to service account credentials JSON
GOOGLE_APPLICATION_CREDENTIALS=credentials/service_account.json

# YouTube OAuth credentials file
YOUTUBE_CLIENT_SECRET_FILE=credentials/youtube_oauth.json
YOUTUBE_TOKEN_FILE=credentials/youtube_token.json

# Google Sheets
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id

# Google Calendar
GOOGLE_CALENDAR_ID=primary

# -------------------------------------------
# Notion Configuration
# -------------------------------------------
NOTION_API_KEY=secret_your_notion_api_key
NOTION_CLIENT_DB_ID=your_client_database_id
NOTION_MEETING_DB_ID=your_meeting_database_id

# -------------------------------------------
# Slack Notification (Optional)
# -------------------------------------------
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
SLACK_ENABLED=true

# -------------------------------------------
# Redis Configuration (for Celery)
# -------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -------------------------------------------
# Application Settings
# -------------------------------------------
# Server
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false

# Security
APP_SECRET_KEY=your-secret-key-change-this

# Dashboard Authentication
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your-secure-password

# File Storage
DOWNLOAD_DIR=downloads
MAX_FILE_SIZE_MB=5000

# Processing
AUTO_DELETE_AFTER_PROCESSING=true
ENABLE_LOCAL_WHISPER=false

# -------------------------------------------
# Logging
# -------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
